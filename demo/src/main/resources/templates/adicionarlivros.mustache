{{>header}}
<body>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
            #subcats{
                display: flex;
                flex-wrap: wrap;
            }
            span{
                display: flex;
                background: blueviolet;
                border-radius: 15px;
                padding: 5px;
                gap:5px;
                align-items: center;
                justify-content: space-evenly;
                border: 2px solid #584485;
            }
    </style>
	<form class="pure-form pure-form-aligned">
        <fieldset>
        <legend>Inserir Livros no Banco de Dados!</legend>
            <div class="pure-control-group">
                <label for="nome">Nome do livro</label><input id="nomeDoLivro" type="text" name="nome" >
            </div>
            <div class="pure-control-group">
                <label for="imagemLink">Imagem do livro</label><input id="imagemDoLivro" type="text" name="imagemLink">
            </div>
            <div class="pure-control-group">
                <label for="descricao">Descrição do livro</label><input id="descricaoDoLivro" type="text" name ="descricao">
            </div>
            <div class="pure-control-group">
                <label for="quantidadeDisponivel">Quantidade disponível</label><input id="quantidadeDisponivel" type="number" name="quantidadeDisponivel">
            </div>
            <div class="pure-control-group">
                <label for="quantidadeEmprestavel">Quantidade Emprestavel</label><input id="quantidadeEmprestavel" type="number" name="quantidadeEmprestavel">
            </div>
            <div class="pure-control-group">
                <label for="categoria">Categorias</label><select id="categorias" name="categoria" onchange="carregarSubcategorias()">
                <option value="0">Selecione</option>
                {{#categoria}}
                <option value="{{this.id}}">{{this.nome}}</option>
                {{/categoria}}
            </select></div>
            <div class="pure-control-group"><label for="subcategorias">Subcategoria</label><select id="subcategorias" onchange="addMaisUmNaListaDeSub()" name="subcategorias"><option value="0">Selecione</option></select></div>
            
            <div id="subcats">
                <div class="pure-control-group">
                    <label for="subcategoria">subcategorias</label>
                </div>
            </div>
            
            <div class = "pure-control-group">
                <label for="naoencontrou?">Não encontrou a subcategoria que queria? adicione uma!</label>
                <input id="subcatNova" name= "naoencontrou?" type="text">
                <input id="checarSubcat" type="button" value="checar se existe" class="pure-button pure-button-primary">
            </div>

            <div class="pure-controls">
                <label for="enviar"><label>
                <input  type="button"  onclick = "enviarForm()" value="Enviar" class="pure-button pure-button-primary">
                </label></label>
            </div>

        </fieldset>
	</form>
	
    <script src="js/AddLivro.js" charset="UTF-8"></script>
</body>
</html>
