{{>header}}
<body>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <style>
            *, *:before, *:after {
                box-sizing: border-box;
                margin: 0;
                gap: 0;
            }
            #menu {
                background-color: #001f3f!important;
                color: #fff;
                /*padding: 10px;*/
                /*border-bottom: 5px solid #0c2c52;*/
                display: flex;
            }

            .principal {
                background-color: #fff;
                border-radius: 10px;
                display: flex;
            }
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background-color: #f5f5f5;
            }
            #subcats{
                display: flex;
                flex-wrap: wrap;
            }
            span{
                display: flex;
                background: blueviolet;
                border-radius: 15px;
                padding: 5px;
                gap:5px;
                align-items: center;
                justify-content: space-evenly;
                border: 2px solid #584485;
            }
             footer {
                background-color: #001F3F;
                color: #fff;
                text-align: center;
                /*padding: 10px;*/
                position: relative;
                bottom: -31px;
                width: 100%;
            }

            #footer_dentro {
                color: #fff;
                text-decoration: none;
                margin: 0 15px;
                transition: background-color 0.3s ease;
            }

            #footer_dentro:hover {
                background-color: #001F3F;
            }
            .pure-button-primary,
            .pure-button-selected,
            a.pure-button-primary,
            a.pure-button-selected {
                background-color: #0078e7;
                color: #fff;
                
            }
            input[type=text],
            .pure-form input[type=time],
            .pure-form input[type=url],
            .pure-form input[type=week],
            .pure-form select,
            .pure-form textarea {
                padding: 0.5em 0.6em;
                display: inline-block;
                border: 1px solid #ccc;
                box-shadow: inset 0 1px 3px #ddd;
                border-radius: 4px;
                vertical-align: middle;
                box-sizing: border-box;
                
            }

    </style>

    <div class="custom-wrapper pure-g" id="menu">
            <div class="pure-u-1 pure-u-md-1-3">
                <div class="pure-menu">
                    <a href="#" class="pure-menu-heading custom-brand">Salve!</a>
                    <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
                </div>
            </div>
            <div class="pure-u-1 pure-u-md-1-3">
                <div class="pure-menu custom-can-transform pure-menu-horizontal">
                    <ul class="pure-menu-list">
                        <li class="pure-menu-item"><a href="visaodoproduto" class="pure-menu-link">voltar</a></li>
                        <li class="pure-menu-item"><a href="admbaixa" class="pure-menu-link">Gerenciar</a></li>
                        <li class="pure-menu-item"><a href="#" class="pure-menu-link">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="pure-u-1 pure-u-md-1-3">
                <div class="pure-menu custom-menu-3 custom-can-transform pure-menu-horizontal">
                    
                    <ul class="pure-menu-list">
                        <li class="pure-menu-item">{{user.fullname}}</li>
                        <li class="pure-menu-item"><img id = "pfp" src="{{user.imagemLink}}" alt=""></li>
                    </ul>
                </div>
            </div>
        </div>
        

	<form class="pure-form pure-form-aligned">
        <fieldset>
        <legend>Inserir Livros no Banco de Dados!</legend>
            <div class="pure-control-group"><label for="nome">Nome do livro</label><input type="text" name="nome" id=""></div>
            <div class="pure-control-group"><label for="imagemLink">Imagem do livro</label><input type="text" name="imagemLink" id=""></div>
            <div class="pure-control-group"><label for="descricao">Descrição do livro</label><input type="text" name ="descricao"></div>
            <div class="pure-control-group"><label for="quantidadeDisponivel">Quantidade disponível</label><input type="number" name="quantidadeDisponivel"></div>
            <div class="pure-control-group"><label for="quantidadeEmprestavel">Quantidade Emprestavel</label><input type="number" name="quantidadeEmprestavel"></div>
            <div class="pure-control-group"><label for="categoria">Categorias</label><select id="categorias" name="categoria" onchange="carregarSubcategorias()">
                <option value="0">Selecione</option>
                {{#categoria}}
                <option value="{{this.id}}">{{this.nome}}</option>
                {{/categoria}}
            </select></div>
            <div class="pure-control-group"><label for="subcategorias">Subcategoria</label><select id="subcategorias" onchange="addMaisUmNaListaDeSub()" name="subcategorias"><option value="0">Selecione</option></select></div>
            
            <div id="subcats">
                <div class="pure-control-group">
                    <label for="subcategoria">subcategorias</label>
                </div>
            </div>
            
            <div class = "pure-control-group">
                <label for="naoencontrou?">Não encontrou a subcategoria que queria? adicione uma!</label>
                <input id="subcatNova" name= "naoencontrou?" type="text">
                <input id="checarSubcat" type="button" value="checar se existe" class="pure-button pure-button-primary">
            </div>

            <div class="pure-controls"><label for="enviar"><label><input name="enviar" class="pure-button pure-button-primary" type="submit" value="Enviar"></label></label></div>

        </fieldset>
	</form>
	{{>footer}}
    <script src="js/AddLivro.js" charset="UTF-8"></script>
</body>
</html>