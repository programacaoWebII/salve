                            <summary class="btn btn-primary w-100 mb-3" >{{this.nome}}</summary>
                            <ul>
                                {{#this.subcategorias}}
                                    <li><label> <input type="checkbox" name="{{this.id}}" onclick="pegaTodosOsCheckbox()"> {{this.nome}} </label></input></li>
                                {{/this.subcategorias}}
                            </ul>
                            </details>
                {{/categoria}}
            </div>


        <style>
            #panelLivros{
                width: 70%;
            }
        </style>
        
        

            </div>
        </div>

        
    </div>

        <div id="panelLivros">
            <div class="row">
                {{#livros}}
                    <div class="col-md-9 principal">
